  <div class="form-floating mb-3">
    <input
      type="text"
      class="form-control"
      id="airIp"
      value="<%= settings.air.ip %>"
      name="airIp"
      placeholder=""
    />
    <label for="airIp">IP Addresse</label>
  </div>
  <div class="form-floating mb-3">
    <input
      type="text"
      class="form-control"
      id="airUser"
      value="<%= settings.air.user %>"
      name="airUser"
      placeholder=""
    />
    <label for="airUser">Username</label>
  </div>
  <div class="form-floating">
    <input
      type="text"
      class="form-control"
      id="airPw"
      value="<%= settings.air.pw %>"
      name="airPw"
      placeholder=""
    />
    <label for="airPw">Password</label>
  </div>
  <button type="submit" class="btn btn-primary my-3">Save</button>
</form>
